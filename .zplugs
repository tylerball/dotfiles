export ZPLUG_HOME=/usr/local/opt/zplug
source $ZPLUG_HOME/init.zsh

export ENHANCD_FILTER='fzf'
export ENHANCD_DOT_SHOW_FULLPATH=1
export BASE16_SCHEME="material-darker"
export FZF_DEFAULT_OPTS='--bind ctrl-d:page-down,ctrl-u:page-up'

zplugs=()
zplug "Tarrasch/zsh-autoenv"
zplug "supercrabtree/k"
zplug "zsh-users/zsh-autosuggestions"
zplug "zsh-users/zsh-completions", hook-build:"compinit"
zplug "chriskempson/base16-shell"
if [[ `uname` == 'Darwin' ]]; then
  zplug "Code-Hex/battery", as:command, from:gh-r
fi
zplug "b4b4r07/enhancd", use:init.sh, defer:2
zplug "djui/alias-tips"
zplug "sharat87/zsh-vim-mode"
zplug "zsh-users/zsh-syntax-highlighting", defer:2
zplug "zsh-users/zsh-history-substring-search", defer:2
# zplug "iam4x/zsh-iterm-touchbar"
zplug "holman/spark", as:command, use:spark
zplug "junegunn/fzf", use:shell/key-bindings.zsh
zplug "tylerball/raw2jpg", as:command, use:raw2jpg

# zplug "BrandonRoehl/zsh-clean", use:clean.plugin.zsh
zplug "denysdovhan/spaceship-prompt", use:spaceship.zsh, from:github, as:theme

if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

zplug load
# vim: ft=zsh
