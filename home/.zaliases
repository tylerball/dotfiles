# Django
alias runserver='./manage.py runserver 0:8000'
alias rs='./manage.py runserver 0:8000'

# SSH
alias sshrestore="eval `ssh-agent` \&\& ssh-add ~/.ssh/id_rsa"

# tmux
if [[ "$(uname)" = "Darwin" ]]; then
    alias tmux='tmux -2 -f ~/.tmux-osx.conf'
else
    alias tmux='tmux -2'
fi

# Editor
if [[ "$(uname)" = "Darwin" ]]; then
    alias m='mvim'
else
    alias mvim='vim'
    alias m='vim'
fi

if [[ -z `which mvim` ]]; then
  alias vim='`which mvim` -v'
fi

# File manipulation
alias rnurl="rename 'y/A-Z/a-z/' * -f && rename 'y/ /_/' *"
alias rmempty="find . -type d -empty -exec rmdir {} \;"

# adds chmod numerical values to ls
alias lsc="ls -l | awk '{k=0;for(i=0;i<=8;i++)k+=((substr(\$1,i+2,1)~/[rwx]/)*2^(8-i));if(k)printf(\"%0o \",k);print}'"

# git
alias gt="git st"
alias gpl="git pull"
alias gl="git l"
alias gd="git diff"
alias gdc="git diff --cached"
alias gu="git stash && git svn dcommit && git stash pop"
alias ga="git add"
alias gs="git stash -u"
alias gcA="git commit --all --amend"
alias gC="git commit --amend"
alias gx="git-annex"

alias hb="hub browse"

# utils
alias srv='python -m SimpleHTTPServer 8900'

if [[ "$(uname)" = "Darwin" ]]; then
  alias ack-grep='ack'
fi

# rubby
alias be="noglob bundle exec"
alias bi="bundle check || bundle install --jobs=4"
alias rt="be ruby -Itest"

# shopify
alias sr="dev server"

# jekyll
alias brs="bundle exec rake server"

# vagrant
alias vg="vagrant"
alias vgs="vagrant ssh -- -R 2224:localhost:2224 -R 2225:localhost:2225"
alias vgp="vagrant provision"
